{
  "name": "sgk-schedule-lite-bot",
  "version": "0.1.0",
  "description": "Telegram bot for Samara State College schedule",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "start:schedule-checker": "cross-env NODE_ENV=production BOT_MODE=schedule-checker node dist/app.js",
    "dev": "nodemon src/app.ts",
    "dev:schedule-checker": "cross-env BOT_MODE=schedule-checker nodemon src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:start": "npm run build && npm run start",
    "build": "tsc && cp -r ./src/locales ./dist",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "prettier": "prettier --write ./src/**/*.ts",
    "prepare": "npx husky install"
  },
  "author": "Dmitry Krasiev",
  "license": "ISC",
  "dependencies": {
    "@grammyjs/auto-retry": "^1.1.1",
    "@grammyjs/i18n": "^1.0.1",
    "@grammyjs/parse-mode": "^1.6.0",
    "@grammyjs/runner": "^1.0.4",
    "@grammyjs/storage-mongodb": "^2.0.2",
    "axios": "^0.27.2",
    "cron-parser": "^4.8.1",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.2",
    "flexsearch": "0.7.21",
    "grammy": "^1.12.0",
    "humanize-duration": "^3.28.0",
    "ioredis": "^5.3.2",
    "mongoose": "^7.0.3",
    "node-cron": "^3.0.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@tsconfig/node18": "^2.0.0",
    "@types/flexsearch": "^0.7.3",
    "@types/humanize-duration": "^3.27.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.7",
    "@types/node-cron": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "husky": "^8.0.0",
    "mockdate": "^3.0.5",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
