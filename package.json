{
  "name": "sgk-schedule-lite-bot",
  "version": "0.1.0",
  "description": "Telegram bot for Samara State College schedule",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "start:schedule-checker": "cross-env NODE_ENV=production node dist/schedule-checker.js",
    "build:start": "npm run build && npm run start",
    "build": "tsc && cp -r ./src/locales ./dist",
    "dev": "cross-env NODE_ENV=development nodemon src/app.ts",
    "dev:schedule-checker": "cross-env NODE_ENV=development nodemon src/schedule-checker.ts",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "prettier": "prettier --write ./src/**/*.ts",
    "prepare": "npx husky install"
  },
  "author": "Dmitry Krasiev",
  "license": "ISC",
  "dependencies": {
    "@grammyjs/i18n": "^1.0.1",
    "@grammyjs/runner": "^1.0.4",
    "@grammyjs/storage-mongodb": "^2.0.2",
    "axios": "^0.27.2",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.2",
    "grammy": "^1.12.0",
    "mongodb": "^4.13.0",
    "node-cron": "^3.0.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.7",
    "@types/node-cron": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "husky": "^8.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
