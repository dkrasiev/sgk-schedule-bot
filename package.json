{
  "name": "sgk-schedule-lite-bot",
  "version": "0.1.0",
  "description": "Telegram bot for getting the schedule of classes of Samara State College",
  "main": "src/index.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "build": "ts-node esbuild.config.ts && cp -r ./src/locales ./build/ && cp .env ./build/.env",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write ./src/**/*.ts",
    "prepare": "npx husky install"
  },
  "author": "Dmitry Krasiev",
  "license": "ISC",
  "dependencies": {
    "@grammyjs/auto-retry": "^1.1.1",
    "@grammyjs/i18n": "^1.0.1",
    "@grammyjs/parse-mode": "^1.8.1",
    "@grammyjs/runner": "^1.0.4",
    "@grammyjs/storage-mongodb": "^2.3.2",
    "axios": "^1.5.1",
    "axios-request-throttle": "^1.0.0",
    "cron-parser": "^4.9.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "flexsearch": "0.7.21",
    "grammy": "^1.19.0",
    "humanize-duration": "^3.30.0",
    "inversify": "^6.0.1",
    "ioredis": "^5.3.2",
    "jest": "^29.7.0",
    "mongoose": "^7.5.3",
    "node-cron": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/flexsearch": "^0.7.4",
    "@types/humanize-duration": "^3.27.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.18.0",
    "@types/node-cron": "^3.0.9",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.19",
    "eslint": "^8.50.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "mockdate": "^3.0.5",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
